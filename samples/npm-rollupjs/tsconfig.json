{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "$out_dir",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "declaration": true,
    "esModuleInterop": true,
    // use tslib runtime to meaningfully decrease build output
    // as mentioned here https://www.typescriptlang.org/tsconfig#importHelpers
    "importHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
