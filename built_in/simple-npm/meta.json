{
  "id": "simple-npm",
  "args": [
    {
      "key": "pkg_name",
      "q_type": "Text",
      "label": "Package name"
    },
    {
      "key": "description",
      "q_type": "Text",
      "label": "Project description"
    },
    {
      "key": "module_type",
      "q_type": "Select",
      "label": "Import module",
      "options": ["commonjs", "module"]
    }
  ],
  "dynamic_files": [
    "index.js",
    "package.json"
  ],
  "conditional_operations": [
    {
      "conditions": [
        {
          "lhs": "$module_type",
          "op": "Eq",
          "rhs": "commonjs"
        }
      ],
      "operations": [
        {
          "Copy": {
            "files": ["./meta.json"],
            "dest": "./hook/meta.json"
          }
        }
      ]
    }
  ]
}
