{
  "compilerOptions": {
    "lib": ["es2022", "dom"],
    "target": "$target",
    "module": "es2022",
    "moduleResolution": "node",
    "outDir": "$out",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    // use tslib runtime to meaningfully decrease build output
    // as mentioned here https://www.typescriptlang.org/tsconfig#importHelpers
    "importHelpers": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/test/*", "$out"]
}
